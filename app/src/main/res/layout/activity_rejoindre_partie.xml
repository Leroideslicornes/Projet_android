<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fond_accueil"
        tools:context=".RejoindrePartie">

    <EditText
            android:id="@+id/editTextCode"
            android:hint="Code de la partie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:background="@drawable/edit_text_bg"
            android:padding="12dp"
            android:textColor="#4CAF50"
            android:textColorHint="#4CAF50"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="248dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.0" />

    <EditText
            android:id="@+id/editTextPseudo"
            android:hint="Votre pseudo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:background="@drawable/edit_text_bg"
            android:padding="12dp"
            android:textColor="#FF4081"
            android:textColorHint="#FF4081"
            app:layout_constraintTop_toBottomOf="@id/editTextCode"
            android:layout_marginTop="24dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.0" />

    <Button
            android:id="@+id/buttonJoin"
            android:text="Accéder à la partie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_bg"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_marginTop="28dp"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/editTextPseudo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    <Button
            android:id="@+id/buttonBack"
            android:text="Retour à l'écran principal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_bg"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/buttonJoin"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>


