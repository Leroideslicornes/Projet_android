<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Style de base pour toute l'application -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Définit la couleur de fond principale de l'application -->
        <item name="android:windowBackground">@color/white</item>
    </style>

    <!-- Style pour les EditText -->
    <style name="CustomEditText">
        <item name="android:background">@drawable/edit_text_bg</item> <!-- Fond arrondi avec bordure -->
        <item name="android:padding">16dp</item> <!-- Espace intérieur -->
        <item name="android:textColor">#000000</item> <!-- Texte noir -->
        <item name="android:textSize">16sp</item> <!-- Taille du texte -->
    </style>

    <!-- Style pour les boutons -->
    <style name="CustomButton">
        <item name="android:background">@drawable/button_bg</item> <!-- Fond arrondi pour les boutons -->
        <item name="android:textColor">#FFFFFF</item> <!-- Texte blanc -->
        <item name="android:textSize">16sp</item> <!-- Taille du texte -->
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

</resources>
